<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/width_zero_dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="@dimen/_30sdp"
                android:layout_width="@dimen/_140sdp"
                android:background="@color/BLACK"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ret_name_visit_summary"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@color/WHITE"
                    android:layout_marginLeft="@dimen/margin_point_one_dip"
                    android:layout_marginRight="@dimen/margin_point_one_dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text"/>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/BLACK">

    </LinearLayout>



</LinearLayout>