<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:id="@+id/ll_so_create_line_item_sub"
    android:minWidth="@dimen/_169sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_169sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/width_zero_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingTop="2dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/iv_mat_scheme_item"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_weight="1"
                        android:contentDescription="@null"
                        android:paddingLeft="@dimen/_3sdp"
                        android:src="@drawable/ic_scheme_mat_wise" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_so_create_sku_grp_sub"
                    android:layout_width="@dimen/_145sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.19"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />


                <ImageView
                    android:visibility="invisible"
                    android:layout_weight="0.1"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:id="@+id/et_item_so_create_ord_qty"
                    style="@style/EditBookTextEdit"
                    android:layout_width="1dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:gravity="right|center"
                    android:hint="@string/qty"
                    android:inputType="numberDecimal"
                    android:paddingRight="4dp"
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/medium_text"
                    android:visibility="invisible" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_line_color"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="1dp"
        android:background="@color/GREY"/>

    <ScrollView
        android:visibility="gone"
        android:id="@+id/exapndble_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        />

</LinearLayout>