<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WHITE"
    android:orientation="vertical"
    android:padding="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_material_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/medium_text" />

                    <TextView
                        android:id="@+id/tv_material_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/BLACK"
                        android:textSize="@dimen/medium_text" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_db_stk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="right|top"
                    android:padding="@dimen/_3sdp"
                    android:text="TextView"
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/et_material_qty"
                    style="@style/EditBookTextEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="@dimen/_1sdp"
                    android:layout_weight="1.4"
                    android:drawableTint="@color/BLACK"
                    android:gravity="right"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/color_cursor" />

                <TextView
                    android:id="@+id/tv_material_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="right"
                    android:textColor="@color/BLACK"
                    android:visibility="gone" />
            </LinearLayout>

            <EditText
                style="@style/EditBookTextEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_weight="1"
                android:gravity="top"
                android:id="@+id/et_remarks"
                android:hint="@string/hint_enter_remarks"
                android:inputType="textMultiLine"
                android:minLines="2" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_delete_item"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="10"
            android:background="@color/WHITE"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_delete" />
    </LinearLayout>

</LinearLayout>