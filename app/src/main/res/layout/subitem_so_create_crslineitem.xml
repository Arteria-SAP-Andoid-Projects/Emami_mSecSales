<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:id="@+id/ll_so_create_line_item"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:orientation="horizontal">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_expand_icon"
                    android:layout_weight="0.1"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_item_so_create_soq"
                    android:layout_width="@dimen/_60sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text"/>



                <EditText
                    android:id="@+id/et_item_so_create_ord_qty"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="42dp"
                    android:textSize="@dimen/medium_text"
                    android:hint="@string/qty"
                    android:gravity="right|center"
                    android:textColor="@color/BLACK"
                    style="@style/EditBookTextEdit"
                    />
              <!--  <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="42dp"
                    android:textSize="@dimen/medium_text"
                    android:hint="@string/qty"
                    android:gravity="right|center"
                    android:textColor="@color/BLACK"
                    style="@style/EditBookTextEdit"
                    />-->
                <TextView
                    android:id="@+id/tv_item_so_create_mrp"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="125.00"
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_item_so_create_db_stk"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="14"
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_item_so_create_ret_stk"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="3"
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />





            </LinearLayout>


        </LinearLayout>

        <!--<ImageView
            android:id="@+id/iv_expand_icon"
            android:layout_weight="0.1"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/down"
            android:layout_gravity="center_vertical"/>-->

    </LinearLayout>
    <include layout="@layout/black_line_lay"/>

    <ScrollView
        android:visibility="gone"
        android:id="@+id/sv_exapndble_list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        />

</LinearLayout>