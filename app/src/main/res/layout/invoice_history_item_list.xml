<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_4sdp"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="@dimen/width_zero_dip"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_1sdp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_gravity="left"
            android:paddingLeft="@dimen/_3sdp"
            android:text="xxxxxxxx"
            android:id="@+id/tv_in_history_date"
            android:textColor="@color/BLACK" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_gravity="left"
            android:paddingLeft="@dimen/_3sdp"
            android:text="xxxxxxxx"
            android:id="@+id/tv_in_history_no"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_gravity="left"
            android:paddingLeft="@dimen/_3sdp"
            android:text="xxxxxxxx"
            android:id="@+id/tv_distance"
            android:visibility="gone"
            android:textColor="@android:color/black" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_width="@dimen/height_zero_dip"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_1sdp" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_gravity="right"
            android:text="xxxxxxxx"
            android:id="@+id/tv_in_history_amt"
            android:textColor="@android:color/black" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_1sdp" >

        <TextView
            android:id="@+id/tv_status_indicator"
            android:layout_gravity="right"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_1sdp"
    android:background="@color/line_color"/>


</LinearLayout>
