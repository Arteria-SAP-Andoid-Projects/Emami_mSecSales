<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WHITE"
    android:id="@+id/ll_so_create_line_item_sub"
    android:orientation="vertical">


    <!--<View-->
        <!--android:id="@+id/view_line_color"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/GREY"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/width_zero_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingTop="2dp">
                <ImageView

                    android:layout_width="@dimen/padding_zero_dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_expand_all"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/tv_item_so_create_soq_sub"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />

                <EditText
                    android:id="@+id/et_item_so_create_ord_qty_sub"
                    style="@style/EditBookTextEdit"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="42dp"
                    android:gravity="right|center"
                    android:hint="@string/qty"
                    android:isScrollContainer="true"
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_item_so_create_mrp_sub"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_item_so_create_db_stk_sub"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_item_so_create_ret_stk_sub"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />


            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/view_line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GREY"/>


</LinearLayout>
