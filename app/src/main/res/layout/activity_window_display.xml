                                        android:layout_margin="@dimen/padding_five_dip"
                                        android:text="@string/lbl_contract_form" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/iv_contract_form"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_150sdp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_imagepreview_new" />

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_attachment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/padding_four_dip"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="@dimen/width_zero_dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight=".5"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:paddingEnd="@dimen/padding_zero_dip"
                                    android:paddingLeft="@dimen/padding_three_dip"
                                    android:paddingRight="@dimen/padding_zero_dip"
                                    android:paddingStart="@dimen/padding_zero_dip"
                                    android:text="@string/lbl_expense_item_attachmnt"
                                    android:textColor="@color/TEXT_COLOR"
                                    android:textSize="@dimen/medium_text" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top|center"
                                    android:paddingLeft="@dimen/padding_three_dip"
                                    android:text="@string/lbl_star"
                                    android:textColor="@color/RED"
                                    android:textSize="@dimen/medium_text" />
                            </LinearLayout>

                        </LinearLayout>

                    </TableLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/WHITE"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <android.support.design.widget.CoordinatorLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <android.support.design.widget.AppBarLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


                                <android.support.design.widget.TabLayout
                                    android:id="@+id/tabs"
                                    style="@style/MyCustomTabLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:tabGravity="fill"
                                    app:tabMaxWidth="0dp"
                                    app:tabMode="fixed" />
                            </android.support.design.widget.AppBarLayout>

                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewpager"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
                        </android.support.design.widget.CoordinatorLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_custom_invoice_sel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:keyPreviewLayout="@layout/preview"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>