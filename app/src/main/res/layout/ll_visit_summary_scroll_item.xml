<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:id="@+id/ll_so_create_line_item"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/BLACK">

                <TextView
                    android:id="@+id/tv_time_taken_value"
                    android:layout_width="@dimen/_95sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="right|center_vertical"
                    android:background="@color/WHITE"
                    android:layout_marginLeft="@dimen/margin_point_one_dip"
                    android:layout_marginRight="@dimen/margin_point_one_dip"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text"/>

                <TextView
                    android:id="@+id/tv_order_value"
                    android:layout_width="@dimen/_80sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/WHITE"
                    android:layout_marginLeft="@dimen/margin_point_one_dip"
                    android:layout_marginRight="@dimen/margin_point_one_dip"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_day_target_value"
                    android:layout_width="@dimen/_80sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/WHITE"
                    android:layout_marginLeft="@dimen/margin_point_one_dip"
                    android:layout_marginRight="@dimen/margin_point_one_dip"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/PURPLE"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_today_tlsd"
                    android:layout_width="@dimen/_80sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/WHITE"
                    android:layout_marginLeft="@dimen/margin_point_one_dip"
                    android:layout_marginRight="@dimen/margin_point_one_dip"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_tlsd_till_date_val"
                    android:layout_width="@dimen/_80sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/WHITE"
                    android:layout_marginLeft="@dimen/margin_point_one_dip"
                    android:layout_marginRight="@dimen/margin_point_one_dip"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/header_tile_text_color"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_month_tgt"
                    android:layout_width="@dimen/_80sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/WHITE"
                    android:layout_marginLeft="@dimen/margin_point_one_dip"
                    android:layout_marginRight="@dimen/margin_point_one_dip"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/BLUE"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_ach_mtd"
                    android:layout_width="@dimen/_80sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/WHITE"
                    android:layout_marginLeft="@dimen/margin_point_one_dip"
                    android:layout_marginRight="@dimen/margin_point_one_dip"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_mtd_per"
                    android:layout_width="@dimen/_70sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/WHITE"
                    android:layout_marginLeft="@dimen/margin_point_one_dip"
                    android:layout_marginRight="@dimen/margin_point_one_dip"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/medium_text" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <include layout="@layout/black_line_lay"/>

</LinearLayout>