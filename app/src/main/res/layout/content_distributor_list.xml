                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_semi_colon"
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/medium_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/width_zero_dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_lat_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/medium_text" />

                <TextView
                    android:id="@+id/tv_long_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/BLACK"
                    android:textSize="@dimen/medium_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/ll_comm_above_line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_point_five_dip"
            android:background="@color/BLACK"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/ll_comm_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_alice_blue"
            android:paddingEnd="@dimen/padding_zero_dip"
            android:paddingLeft="@dimen/padding_three_dip"
            android:paddingRight="@dimen/padding_zero_dip"
            android:paddingStart="@dimen/padding_zero_dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_communications"
                android:textColor="@color/BLACK"
                android:textSize="@dimen/medium_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_comm_below_line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_point_five_dip"
            android:background="@color/BLACK"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/ll_comm_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/call"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@drawable/phoneicon" />

            <ImageView
                android:id="@+id/sms"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@drawable/ic_sms_new" />

            <ImageView
                android:id="@+id/mail"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@drawable/emailicon"

                />

            <ImageView
                android:id="@+id/whats_app"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@drawable/bwhatssapp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_point_five_dip"
            android:background="@color/BLACK"
            android:orientation="horizontal" />
    </LinearLayout>

</LinearLayout>
