<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/WHITE"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="fill_parent"
        android:padding="@dimen/_3sdp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_mr_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/mr_name"
            android:textColor="@color/header_tile_text_color"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text" />
        <TextView
            android:id="@+id/tv_main_menu_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="@dimen/_1sdp"
            android:text=""
            android:textColor="@color/header_tile_text_color"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/padding_point_five_dip"
        android:background="@color/line_color"
        tools:ignore="SmallSp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/vertical_line_color"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_kpi_lbl"
            android:layout_width="@dimen/width_100_dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_point_one_dip"
            android:layout_marginRight="@dimen/margin_point_one_dip"
            android:layout_weight="1"
            android:background="@color/light_alice_blue"
            android:gravity="center"
            android:text="@string/lbl_crs_sku_group"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:layout_width="@dimen/width_forty_dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_point_one_dip"
            android:layout_marginRight="@dimen/margin_point_one_dip"
            android:layout_weight="1"
            android:background="@color/light_alice_blue"
            android:gravity="center"
            android:text="@string/lbl_target"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/BLUE"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:layout_width="@dimen/width_forty_dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_point_one_dip"
            android:layout_marginRight="@dimen/margin_point_one_dip"
            android:layout_weight="1"
            android:background="@color/light_alice_blue"
            android:gravity="center"
            android:text="@string/lbl_achived"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:layout_width="@dimen/width_twenty"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_point_one_dip"
            android:layout_marginRight="@dimen/margin_point_one_dip"
            android:layout_weight="1"
            android:background="@color/light_alice_blue"
            android:gravity="center"
            android:text="@string/lbl_achieved_per"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:layout_width="@dimen/width_twenty"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_point_one_dip"
            android:layout_marginRight="@dimen/margin_point_one_dip"
            android:layout_weight="1"
            android:background="@color/light_alice_blue"
            android:gravity="center"
            android:text="@string/lbl_btd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="@dimen/medium_text" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height_one_dip"
        android:background="@color/line_color">
    </LinearLayout>


    <ScrollView
        android:id="@+id/scroll_my_targets_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
    </ScrollView>

</LinearLayout>
